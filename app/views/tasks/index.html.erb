<div class="container my-3">
  <div class="list border-bottom pb-5 mb-3">
    <h1>My tasks</h1>
    <ul class="list-unstyled">
      <% @tasks.each do |task| %>
        <% if task.completed == false %>
          <li><input type="checkbox" class="mr-2" value=<%= task.completed %>><%= link_to task.title.capitalize, task_path(task.id) %>
            <i class="fas fa-circle align-middle"></i>
            <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title.capitalize}?"} do %>
              <i class="fas fa-trash-alt ml-2"></i>
            <% end %></li>
        <% else %>
          <li><input type="checkbox" class="mr-2" value=<%= task.completed %> checked><%= link_to task.title.capitalize, task_path(task.id) %>
            <i class="fas fa-circle align-middle"></i>
            <%= link_to task_path(task.id), method: :delete, data: { confirm: "Delete #{task.title.capitalize}?"} do %>
              <i class="fas fa-trash-alt ml-2"></i>
            <% end %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <i class="fas fa-plus mr-2"></i><%= link_to 'Add a new task', new_task_path %>

</div>



