<div class="container my-3">
  <div class="task border-bottom pb-5 mb-3">
    <div class="header d-flex justify-content-between mb-3 align-items-center">
      <h1><%= @task.title.capitalize %></h1>
      <%= link_to 'Edit this task', edit_task_path, class: 'btn btn-outline-secondary' %>
    </div>
    <p class="card-body bg-light rounded w-50"><%= @task.details %></p>
    <% if @task.completed == false %>
      <p><input type="checkbox" class="mr-2" value=<%= @task.completed %>>This task is not completed yet</p>
    <% else %>
      <p><input type="checkbox" class="mr-2" value=<%= @task.completed %> checked>This task is completed</p>
    <% end %>
  </div>
  <i class="fas fa-undo-alt mr-2"></i><%= link_to 'Bakc to list', tasks_path, class: 'my-4' %>
</div>
